{
  "compilerOptions": {
    "module": "commonjs",
    "project": "tsconfig.json",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./",
    "paths": {
      "@schemas/*": ["schemas/*"],
      "@src/*": ["lib/*"]
    },
    "allowJs": false,
    "noEmit": false
  },
  "exclude": ["wwwroot"],
  "include": ["lib/**/*", "schemas/**/*"]
}
